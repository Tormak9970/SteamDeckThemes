{
  "name": "Show Download Status",
  "display_name": "Show Install Status",
  "version": "v1.4.2",
  "author": "Tormak & RasitAyaz",
  "description": "This theme adds an icon to the library and homepage view indicating if a game is installed or not.",
  "manifest_version": 9,
  "target": "System-Wide",
  "inject": {},
  "patches": {
    "Varients": {
      "type": "dropdown",
      "default": "Original",
      "values": {
        "Original": {
          "varients/original.css": [ "SP", "MainMenu", "QuickAccess" ]
        },
        "Small": {
          "varients/small.css": [ "SP", "MainMenu", "QuickAccess" ]
        },
        "Circular": {
          "varients/circle.css": [ "SP", "MainMenu", "QuickAccess" ]
        },
        "Circlular (no uninstall)": {
          "varients/circleNoUninstall.css": [ "SP", "MainMenu", "QuickAccess" ]
        }
      }
    }
  }
}
