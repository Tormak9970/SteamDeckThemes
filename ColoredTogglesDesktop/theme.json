{
  "name": "Desktop Colored Toggles",
  "version": "v1.2",
  "author": "Tormak",
  "target": "Desktop",
  "description": "Colors all inputs (buttons, toggles, icons, labels, and progress bars) to a chosen color.",
  "inject": {
    "shared.css": [ "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ]
  },
  "manifest_version": 6,
  "patches": {
    "Theme Color": {
      "default": "Orange",
      "type": "dropdown",
      "values": {
        "Red": {
          "--colored-toggles-desktop-main-color": [ "red", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ],
          "--colored-toggles-desktop-friends-text-color": [ "black", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ]
        },
        "Orange": {},
        "Yellow": {
          "--colored-toggles-desktop-main-color": [ "yellow", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ],
          "--colored-toggles-desktop-friends-text-color": [ "black", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ]
        },
        "Green": {
          "--colored-toggles-desktop-main-color": [ "green", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ],
          "--colored-toggles-desktop-friends-text-color": [ "white", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ]
        },
        "Lime": {
          "--colored-toggles-desktop-main-color": [ "lime", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ],
          "--colored-toggles-desktop-friends-text-color": [ "black", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ]
        },
        "Blue": {
          "--colored-toggles-desktop-main-color": [ "blue", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ],
          "--colored-toggles-desktop-friends-text-color": [ "white", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ]
        },
        "Indigo": {
          "--colored-toggles-desktop-main-color": [ "indigo", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ],
          "--colored-toggles-desktop-friends-text-color": [ "white", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ]
        },
        "Magenta": {
          "--colored-toggles-desktop-main-color": [ "magenta", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ],
          "--colored-toggles-desktop-friends-text-color": [ "white", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ]
        },
        "Gradient RGB": {
          "--colored-toggles-desktop-main-color": [ "linear-gradient(138deg, rgba(255,0,0,1) 0%, rgba(255,154,0,1) 10%, rgba(208,222,33,1) 20%, rgba(79,220,74,1) 30%, rgba(63,218,216,1) 40%, rgba(47,201,226,1) 50%, rgba(28,127,238,1) 60%, rgba(95,21,242,1) 70%, rgba(186,12,248,1) 80%, rgba(251,7,217,1) 90%, rgba(255,0,0,1) 100%) 0 0/100% 200%", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ],
          "--colored-toggles-desktop-friends-text-color": [ "black", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ],
          "--colored-toggles-desktop-static-color": [ "magenta", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ],
          "--colored-toggles-desktop-animation": [ "gradient 20s ease infinite forwards", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ]
        },
        "Gradient Deck": {
          "--colored-toggles-desktop-main-color": [ "linear-gradient(138deg, #009fff, #ff1965, #b9b500)", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ],
          "--colored-toggles-desktop-friends-text-color": [ "white", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ],
          "--colored-toggles-desktop-static-color": [ "#009fff", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ],
          "--colored-toggles-desktop-animation": [ "gradient 20s ease infinite forwards", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ]
        },
        "Gray": {
          "--colored-toggles-desktop-main-color": [ "grey", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ],
          "--colored-toggles-desktop-friends-text-color": [ "black", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ]
        },
        "White": {
          "--colored-toggles-desktop-main-color": [ "white", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ],
          "--colored-toggles-desktop-friends-text-color": [ "black", "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ]
        },
        "Custom": {}
      },
      "components": [
        {
          "name": "Main Color",
          "type": "color-picker",
          "on": "Custom",
          "default": "#f00",
          "css_variable": "colored-toggles-main-color",
          "tabs": [ "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ]
        },
        {
          "name": "Text Color",
          "type": "color-picker",
          "on": "Custom",
          "default": "#000",
          "css_variable": "colored-toggles-friends-text-color",
          "tabs": [ "SteamLibraryWindow|Steam", "Properties - .*", "Add Non-Steam Game", ".*Settings" ]
        }
      ]
    }
  }
}