{
  "name": "SteamDeck U",
  "version": "v2.1.0",
  "author": "Tormak",
  "target": "Keyboard",
  "description": "This theme gives you full control over the colors of your steamdeck's keyboard!",
  "manifest_version": 3,
  "inject": {
    "shared.css": [
      "QuickAccess",
      "SP",
      "MainMenu"
    ]
  },
  "patches": {
    "Keyboard": {
      "type": "checkbox",
      "default": "No",
      "values": {
        "Yes": {},
        "No": {}
      },
      "components": [
        {
          "name": "Background",
          "type": "color-picker",
          "on": "Yes",
          "default": "#23262E",
          "css_variable": "SDU-keyboard-background",
          "tabs": [
            "QuickAccess",
            "SP",
            "MainMenu"
          ]
        },
        {
          "name": "Icon Color",
          "type": "color-picker",
          "on": "Yes",
          "default": "#ffffff",
          "css_variable": "SDU-icon-color",
          "tabs": [
            "QuickAccess",
            "SP",
            "MainMenu"
          ]
        },
        {
          "name": "Selected Icon Color",
          "type": "color-picker",
          "on": "Yes",
          "default": "#0e141b",
          "css_variable": "SDU-icon-color__selected",
          "tabs": [
            "QuickAccess",
            "SP",
            "MainMenu"
          ]
        },
        {
          "name": "Toggled Background Color",
          "type": "color-picker",
          "on": "Yes",
          "default": "#1a9fff",
          "css_variable": "SDU-key-toggle-background",
          "tabs": [
            "QuickAccess",
            "SP",
            "MainMenu"
          ]
        },
        {
          "name": "Toggled Color",
          "type": "color-picker",
          "on": "Yes",
          "default": "#ffffff",
          "css_variable": "SDU-key-toggle-color",
          "tabs": [
            "QuickAccess",
            "SP",
            "MainMenu"
          ]
        }
      ]
    },
    "Keys": {
      "type": "checkbox",
      "default": "No",
      "values": {
        "Yes": {},
        "No": {}
      },
      "components": [
        {
          "name": "Background",
          "type": "color-picker",
          "on": "Yes",
          "default": "#0e141b",
          "css_variable": "SDU-base-key-background",
          "tabs": [
            "QuickAccess",
            "SP",
            "MainMenu"
          ]
        },
        {
          "name": "Color",
          "type": "color-picker",
          "on": "Yes",
          "default": "#ffffff",
          "css_variable": "SDU-base-key-color",
          "tabs": [
            "QuickAccess",
            "SP",
            "MainMenu"
          ]
        },
        {
          "name": "Selected Background",
          "type": "color-picker",
          "on": "Yes",
          "default": "#ffffff",
          "css_variable": "SDU-base-key-background__selected",
          "tabs": [
            "QuickAccess",
            "SP",
            "MainMenu"
          ]
        },
        {
          "name": "Selected Color",
          "type": "color-picker",
          "on": "Yes",
          "default": "#0e141b",
          "css_variable": "SDU-base-key-color__selected",
          "tabs": [
            "QuickAccess",
            "SP",
            "MainMenu"
          ]
        }
      ]
    },
    "Function Keys": {
      "type": "checkbox",
      "default": "No",
      "values": {
        "Yes": {},
        "No": {}
      },
      "components": [
        {
          "name": "Background",
          "type": "color-picker",
          "on": "Yes",
          "default": "#000000",
          "css_variable": "SDU-function-key-background",
          "tabs": [
            "QuickAccess",
            "SP",
            "MainMenu"
          ]
        },
        {
          "name": "Color",
          "type": "color-picker",
          "on": "Yes",
          "default": "#ffffff",
          "css_variable": "SDU-function-key-color",
          "tabs": [
            "QuickAccess",
            "SP",
            "MainMenu"
          ]
        },
        {
          "name": "Selected Background",
          "type": "color-picker",
          "on": "Yes",
          "default": "#ffffff",
          "css_variable": "SDU-function-key-background__selected",
          "tabs": [
            "QuickAccess",
            "SP",
            "MainMenu"
          ]
        },
        {
          "name": "Selected Color",
          "type": "color-picker",
          "on": "Yes",
          "default": "#000000",
          "css_variable": "SDU-function-key-color__selected",
          "tabs": [
            "QuickAccess",
            "SP",
            "MainMenu"
          ]
        }
      ]
    }
  }
}